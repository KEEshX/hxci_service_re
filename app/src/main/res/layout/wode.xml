<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:padding="15dp"
        android:background="#6AC8E4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back2"

            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@color/colorLight"
            android:textSize="20sp"
            />

    </LinearLayout>

    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/touxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/touxiang"
        android:layout_gravity="center"
       />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户："
            android:textColor="#69C8E1"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/yonghu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201601010601"
            android:textColor="#69C8E1"
            android:textSize="30dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/xiugai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textColor="#69C8E1"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btntuichu"
        android:layout_gravity="center_horizontal"
        android:layout_width="237dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/shap_baoxiu03"
        android:padding="15dp"
        android:text="退出登录"
        android:textColor="#fff"
        android:textSize="25dp" />
    <TextView
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎使用后勤服务系统"
        android:textColor="#69C8E1"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>